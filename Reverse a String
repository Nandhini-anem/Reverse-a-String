#include <stdio.h>
int main() {
    char s[100], rev[100];
    int i, j = 0;
    printf("Enter string: ");
    scanf("%s", s);
    for(i = 0; s[i] != '\0'; i++);
    i--;
    while(i >= 0) {
        rev[j] = s[i];
        j++;
        i--;
    }
    rev[j] = '\0';
    printf("Reversed string = %s", rev);
    return 0;
}
